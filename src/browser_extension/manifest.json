{
  "manifest_version": 3,
  "name": "Full Page Screenshot",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Capture Full Page Screenshot"
  }
}
